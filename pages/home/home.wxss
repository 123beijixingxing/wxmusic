/* pages/home.wxss */
.home_all {
  position: relative;
  width: 100%;
  height: 100vh;
}
.tab_all {
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  z-index: 10;
  backdrop-filter: blur(15px);
  border-bottom: 1rpx solid rgba(200, 200, 200, .5);
  background: rgba(240, 240, 240, .8);
}
.tab-item {
  display: flex;
  flex: auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  word-break: keep-all;
  font-size: 30rpx;
}
.tab-text {
  padding: 0rpx 20rpx;
  color: #3F51B5;
  margin-bottom: -1rpx;
  border-bottom: 4rpx solid #3F51B5;
}